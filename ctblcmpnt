pgnvue
<template>
  <div>

    <slot :filterData="pagedData" />

    <div class="pager">
      <button @click="prev" :disabled="page === 1">Prev</button>
      {{ page }}
      <button @click="next" :disabled="end >= data.length">Next</button>
    </div>

  </div>
</template>

<script>
export default {
  name: "Pagination",

  props: {
    data: Array,
    pageSize: { default: 4 }
  },

  data() {
    return { page: 1 };
  },

  computed: {
    start() {
      return (this.page - 1) * this.pageSize;
    },
    end() {
      return this.start + this.pageSize;
    },
    pagedData() {
      return this.data.slice(this.start, this.end);
    }
  },

  methods: {
    next() {
      this.page++;
    },
    prev() {
      this.page--;
    }
  }
};
</script>

<style scoped>
.pager {
  padding: 10px;
  text-align: center;
}
</style>

