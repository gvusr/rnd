p.vue
<template>
  <DataTable>

    <Pagination :data="rows">

      <template #default="{ filterData }">

        <!-- Header -->
        <DataRow>
          <HeaderCell
            v-for="h in headers"
            :key="h"
            :value="h"
          />
        </DataRow>

        <!-- Optional Row -->
        <DataRow>
          <Cell value="Toolbar row" />
        </DataRow>

        <!-- Body -->
        <DataRow
          v-for="(row, ri) in filterData"
          :key="ri"
        >
          <Cell
            v-for="h in headers"
            :key="h"
            :value="row[h]"
          />
        </DataRow>

        <!-- Footer -->
        <DataRow>
          <Cell value="Footer row" />
        </DataRow>

      </template>

    </Pagination>

  </DataTable>
</template>

<script>
import DataTable from "./DataTable.vue";
import Pagination from "./Pagination.vue";
import DataRow from "./DataRow.vue";
import HeaderCell from "./HeaderCell.vue";
import Cell from "./Cell.vue";

export default {
  components: {
    DataTable,
    Pagination,
    DataRow,
    HeaderCell,
    Cell
  },

  data() {
    return {
      headers: ["ID", "Name", "Age"],
      rows: [
        { ID: 1, Name: "John", Age: 30 },
        { ID: 2, Name: "Mira", Age: 25 },
        { ID: 3, Name: "Ravi", Age: 28 },
        { ID: 4, Name: "Asha", Age: 33 }
      ]
    };
  }
};
</script>

